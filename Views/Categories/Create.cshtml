@model EventManagementSystem.Models.event_category

@{
    ViewData["Title"] = "Create Category";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-card {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .form-title {
        font-weight: 700;
        color: #343a40;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-submit {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #0056b3;
    }

    .btn-back {
        border-radius: 0.5rem;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="col-md-8 form-card">
        <h3 class="form-title text-center mb-4">Create New Event Category</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="category" class="form-label">Category</label>
                <input asp-for="category" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="description" class="form-label">Description</label>
                <input asp-for="description" class="form-control" placeholder="Describe the category" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="price_per_hour" class="form-label">Price Per Hour</label>
                <input asp-for="price_per_hour" class="form-control" placeholder="e.g., 500" />
                <span asp-validation-for="price_per_hour" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="price_per_day" class="form-label">Price Per Day</label>
                <input asp-for="price_per_day" class="form-control" placeholder="e.g., 3000" />
                <span asp-validation-for="price_per_day" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="max_capacity" class="form-label">Max Capacity</label>
                <input asp-for="max_capacity" class="form-control" placeholder="e.g., 100" />
                <span asp-validation-for="max_capacity" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-secondary btn-back">Back to List</a>
                <button type="submit" class="btn btn-submit">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
