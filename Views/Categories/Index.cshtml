@model IEnumerable<EventManagementSystem.Models.event_category>

@{
    ViewData["Title"] = "Categories";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .search-bar .form-control {
        border-radius: 0.5rem 0 0 0.5rem;
    }

    .search-bar .btn {
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        width: 100%;
        white-space: nowrap;
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h2 class="text-primary">Event Categories</h2>
        <a asp-action="Create" class="btn btn-success">+ Create New</a>
    </div>

    <form asp-action="Index" method="get" class="search-bar mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search categories..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Price/Hour ($)</th>
                    <th>Price/Day ($)</th>
                    <th>Is Active</th>
                    <th>Max Capacity</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.category)</td>
                        <td>@Html.DisplayFor(modelItem => item.description)</td>
                        <td>@Html.DisplayFor(modelItem => item.price_per_hour)</td>
                        <td>@Html.DisplayFor(modelItem => item.price_per_day)</td>
                        <td>@Html.DisplayFor(modelItem => item.is_active)</td>
                        <td>@Html.DisplayFor(modelItem => item.max_capacity)</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.category_id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.category_id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.category_id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
