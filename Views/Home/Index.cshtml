@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        background: linear-gradient(to right, #e3f2fd, #ffffff);
        padding: 4rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.75rem 2rem rgba(0, 0, 0, 0.05);
    }

    .hero-heading {
        font-size: 3rem;
        font-weight: 700;
        color: #0d6efd;
    }

    .hero-subheading {
        font-size: 1.25rem;
        color: #6c757d;
        margin-top: 1rem;
        margin-bottom: 2rem;
    }

    .btn-home {
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 1.125rem;
    }

    @media (max-width: 576px) {
        .hero-heading {
            font-size: 2rem;
        }

        .btn-home {
            font-size: 1rem;
            padding: 0.5rem 1.25rem;
        }
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="text-center hero-section">
        <h1 class="display-5">Welcome to</h1>
        <h2 class="hero-heading">Event Management System</h2>
        <p class="hero-subheading">Effortlessly log and manage your company’s events with ease and efficiency.</p>
        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
            <a href="@Url.Action("Index", "Events")" class="btn btn-primary btn-home">View Events</a>
            <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-primary btn-home">View Categories</a>
        </div>
    </div>
</div>
