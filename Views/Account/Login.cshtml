@using EventManagementSystem.ViewModels;
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #f0f2f5;
    }

    .login-card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .login-title {
        font-weight: 700;
        color: #4a4a4a;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-login {
        background-color: #4a90e2;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #357abd;
    }

    .register-link {
        font-size: 0.9rem;
        color: #4a90e2;
    }

    .register-link:hover {
        text-decoration: underline;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="col-md-5 login-card">
        <h2 class="text-center login-title mb-4">Login to Your Account</h2>
        <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Email</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" for="RememberMe">
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="register-link">Don't have an account? Register</a>
                <button type="submit" class="btn btn-login">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
