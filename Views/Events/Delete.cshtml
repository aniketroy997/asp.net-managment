@model EventManagementSystem.Models.eventstable

@{
    ViewData["Title"] = "Delete Event";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .delete-card {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .delete-title {
        color: #dc3545;
        font-weight: 700;
    }

    .delete-subtext {
        color: #6c757d;
        font-size: 1rem;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        color: #212529;
        margin-bottom: 0.75rem;
    }

    .btn-danger,
    .btn-secondary {
        border-radius: 0.5rem;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="col-md-8 delete-card">
        <h1 class="text-center delete-title mb-3">Delete Event</h1>
        <p class="text-center delete-subtext mb-4">Are you sure you want to delete this event?</p>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">Event Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.event_name)</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.category)</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.start_date)</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.end_date)</dd>

            <dt class="col-sm-4">Venue</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.venue)</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.status)</dd>

            <dt class="col-sm-4">Booking User</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.booking_user_name)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete" class="d-inline-block">
                <input type="hidden" asp-for="event_id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
