@model EventManagementSystem.Models.eventstable

@{
    ViewData["Title"] = "Event Details";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .details-card {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .details-title {
        color: #0d6efd;
        font-weight: 700;
    }

    .details-subtext {
        color: #6c757d;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        color: #212529;
        margin-bottom: 0.75rem;
    }

    .btn-group .btn {
        border-radius: 0.5rem;
        min-width: 100px;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="col-md-8 details-card">
        <h1 class="text-center details-title mb-3">Event Details</h1>
        <p class="text-center details-subtext mb-4">Full information about the selected event</p>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">Event Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.event_name)</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.category)</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.start_date)</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.end_date)</dd>

            <dt class="col-sm-4">Venue</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.venue)</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.status)</dd>

            <dt class="col-sm-4">Booked By</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.booking_user_name)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.event_id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model?.event_id" class="btn btn-danger">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
